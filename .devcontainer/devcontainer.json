{
  "name": "Home Assistant Dev Container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "extensions": [
    "ms-python.python",
    "ms-python.vscode-pylance"
  ],
  "settings": {
    "python.defaultInterpreterPath": "/usr/local/bin/python"
  },
  "forwardPorts": [8123],
  "postCreateCommand": "pip install -r requirements.txt",
  "remoteUser": "vscode"
}
